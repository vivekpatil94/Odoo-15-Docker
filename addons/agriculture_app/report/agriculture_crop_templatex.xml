<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="crop_receipt_report">
        <t t-foreach="docs" t-as="doc">

            <t t-set="doc_type">
                <span></span>
            </t>

            <!-- 乾穀 -->
            <t t-if="doc.CropStatus=='DRY'">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-size: 12pt;">
                        <div class="col-3 mb4">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 35px;" alt="Logo" />
                        </div>
                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">收執聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_dry_report_doc" />
                    </div>
                </t>

                <!-- <div class="mb-3" style="border-bottom: 1px dotted #000000;"></div> -->
                <p style="page-break-before:always;"></p>

                <t t-call="web.basic_layout">
                    <div class="page" style="font-size: 12pt;">
                        <div class="col-3 mb4">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 35px;" alt="Logo" />
                        </div>
                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">存根聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_dry_report_doc" />
                    </div>
                </t>
            </t>
            <!-- 乾穀 END -->

            <!-- 濕穀 -->
            <t t-if="doc.CropStatus=='WET'">
                <t t-call="web.basic_layout">
                    <div class="page" style="font-size: 12pt;">
                        <div class="col-3 mb4">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 35px;" alt="Logo" />
                        </div>
                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">收執聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_wet_report_doc" />
                    </div>
                </t>

                <!-- <div class="mb-3" style="border-bottom: 1px dotted #000000;"></div> -->
                <p style="page-break-before:always;"></p>

                <t t-call="web.basic_layout">
                    <div class="page" style="font-size: 12pt;">
                        <div class="col-3 mb4">
                            <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 35px;" alt="Logo" />
                        </div>
                        <t t-set="doc_type">
                            <span style="position:absolute; right:30px;">存根聯</span>
                        </t>
                        <t t-call="agriculture_app.crop_wet_report_doc" />
                    </div>
                </t>
            </t>
            <!-- 濕穀 END -->

        </t>
    </template>

    <!-- Dry -->
    <template id="crop_dry_report_doc">
        <div class="mt-3"></div>
        <table class="table table-bordered text-center" style="table-layout: fixed; border-color:black;">
            <thead>
                <tr>
                    <th colspan="12">
                        <span>秤量傳票(乾穀)</span>
                        <t t-out="doc_type" />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>日期：</span>
                    </td>
                    <td colspan="4">
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" />
                    </td>
                    <td colspan="6">
                        <span></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>姓名：</span>
                    </td>
                    <td colspan="4">
                        <span t-field="doc.SellerName"></span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>品種：</span>
                    </td>
                    <td colspan="4">
                        <!-- <span t-field="doc.CropVariety"></span> -->
                        <t t-if="doc.isTGAP==1">
                            <span>TGAP</span>
                        </t>
                        <t t-if="doc.FarmingMethod!='conventional'">
                            <span t-field="doc.FarmingMethod"></span>
                        </t>
                        <span t-field="doc.FarmingAdaption"></span>
                        <span t-esc="doc.get_crop_name()" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>車牌號碼：</span>
                    </td>
                    <td colspan="4">
                        <span></span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>濕度：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.RawHumidity"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>度</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>總重：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.CarCropWeight"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>公斤</span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>容量重：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.VolumeWeight"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>g/1</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>車重：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.CarWeight"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>公斤</span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>食味值：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.TasteRating"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>分</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>穀重：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.CropWeight"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>公斤</span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>糙米完整率：</span>
                    </td>
                    <td colspan="3">
                        <span t-field="doc.BrownIntactRatio"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>%</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>乾穀重量：</span>
                    </td>
                    <td colspan="9">
                        <span t-field="doc.CropWeight_by_ratio"></span>
                    </td>
                    <td colspan="1" class="text-left">
                        <span>公斤</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>備註欄：</span>
                    </td>
                    <td colspan="4">
                        <span>約</span>
                        <span t-esc="doc.CropWeight_by_ratio * 1.6667" t-options='{"widget": "float", "precision": 4}'></span>
                        <span>台斤</span>
                    </td>
                    <td colspan="2" class="text-left">
                        <span>經收人：</span>
                    </td>
                    <td colspan="4">
                        <span></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="6" rowspan="2" class="align-middle">
                        <span>
                            <span t-field="res_company.name" />
                        </span>
                    </td>
                    <td colspan="6" class="text-left">
                        <span>
                            <span t-field="res_company.city" />
                            <span t-field="res_company.street" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="text-left">
                        <span>
                            電話：
                            <span t-field="res_company.phone" />
                        </span>
                    </td>
                    <td colspan="3" class="text-left">
                        <span>
                            傳真：
                            <span t-field="res_company.mobile" />
                        </span>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>

    <!-- Wet -->
    <template id="crop_wet_report_doc">
        <div class="mt-3"></div>
        <table class="table table-bordered text-center" style="table-layout: fixed; border-color:black;">
            <thead>
                <tr>
                    <th colspan="12">
                        <span>秤量傳票(濕穀)</span>
                        <t t-out="doc_type" />
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="2" class="text-left">
                        <span>日期：</span>
                    </td>
                    <td colspan="4">
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" />
                    </td>
                    <td colspan="2" class="text-left">
                        <span>烘乾桶：</span>
                    </td>
                    <td colspan="4">
                        <span t-field="doc.DryerId"></span>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="text-left">
